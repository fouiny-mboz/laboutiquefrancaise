{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié -La boutiQue Française{% endblock %}

{% block content %}
<div class="block-small">
<div class="block-small">
  {% for message in app.flashes('notice') %}
  <div class="alert-info">{{ message }}</div>
  {% endfor %}
</div>
<form method="post">
    <h1 class="h3 mb-3 font-weight-normal">  Réinitialiser mon mot de passe</h1>
    <label for="inputEmail">Votre email</label>
    <input type="email"  name="email" id="inputEmail" class="form-control" placeholder="Votre adresse mail" required autofocus>
    <button class="btn btn-block btn-lg btn-info  mt-3" type="submit">
      Valider
    </button>
    <hr>
    <p class="text-enter">Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter</a> ?</p>
</form>
</div>
{% endblock %}
